{
	"name": "command-runner",
	"displayName": "Command Runner",
	"description": "ðŸ’»A VSCode extension that simply obtains the file path and executes the corresponding command.",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.46.0"
	},
	"publisher": "Wscats",
	"repository": {
		"type": "git",
		"url": "https://github.com/wscats/command-runner.git"
	},
	"author": {
		"name": "Eno Yao",
		"url": "https://github.com/Wscats/command-runner"
	},
	"homepage": "https://github.com/Wscats/command-runner",
	"galleryBanner": {
		"color": "#232323",
		"theme": "dark"
	},
	"license": "MIT",
	"icon": "public/icon.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:command-runner.commandRunner"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "command-runner.commandRunner",
				"title": "Run Command"
			}
		],
		"configuration": {
			"title": "Command runner configuration",
			"properties": {
				"command-runner.before-run-command": {
					"type": "string",
					"default": "clear",
					"description": "Before Run Command"
				},
				"command-runner.run-command": {
					"type": "string",
					"default": "DWT_ENV=local npx dwt %FILE_PATH%",
					"description": "Run Command"
				},
				"command-runner.after-run-command": {
					"type": "string",
					"default": "ls",
					"description": "After Run Command"
				}
			}
		},
		"menus": {
			"explorer/context": [
				{
					"when": "resourceExtname =~ /.tsx?$|.jsx?$/",
					"command": "command-runner.commandRunner",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"when": "resourceExtname =~ /.tsx?$|.jsx?$/",
					"command": "command-runner.commandRunner",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"when": "resourceExtname =~ /.tsx?$|.jsx?$/",
					"command": "command-runner.commandRunner",
					"group": "navigation"
				}
			]
		}
	},
	"keywords": [
		"dwt",
		"command",
		"runner"
	],
	"scripts": {
		"build": "vsce package",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}